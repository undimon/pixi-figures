{
	"exclude": ["node_modules"],
	"compilerOptions": {
		"incremental": true,
		"target": "esnext",
		"module": "commonjs",
		"lib": ["dom", "es2015"],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
